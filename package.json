{
  "name": "@getpopcorn/utils",
  "version": "0.0.12",
  "description": "Various common utilities and tools",
  "author": "Popcorn Cloud",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "/lib",
    "!/lib/**/*.map",
    "!/tests"
  ],
  "scripts": {
    "test": "node test.js",
    "test:watch": "node test.js true",
    "build": "npm run clean && tsup src --format esm,cjs --dts && mv dist lib",
    "clean": "rm -rf lib && rm -rf dist",
    "package": "npm pack",
    "pretest": "rm -rf coverage && rm -rf temp_coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "mikrocompare": "1",
    "mikroformat": "1"
  },
  "devDependencies": {
    "@types/node": "20",
    "@typescript-eslint/eslint-plugin": "7",
    "@typescript-eslint/parser": "7",
    "c8": "9",
    "eslint": "8",
    "eslint-config-prettier": "9",
    "eslint-plugin-prettier": "5",
    "husky": "9",
    "prettier": "3",
    "ts-node": "10",
    "tsup": "8",
    "typescript": "5"
  }
}
