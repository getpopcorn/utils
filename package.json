{
  "name": "@getpopcorn/utils",
  "version": "0.0.7",
  "description": "Various common utilities and tools",
  "author": "Popcorn Cloud",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "exports": {
    ".": {
      "require": "./lib/index.cjs.js",
      "import": "./lib/index.esm.js"
    }
  },
  "files": [
    "/lib",
    "!/lib/**/*.map",
    "!/tests"
  ],
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "test": "c8 -reporter=lcov node --loader ts-node/esm --test ./tests/*",
    "test:watch": "node watch.js",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=lib/index.cjs.js --platform=node --target=node20 --format=cjs",
    "build:esm": "esbuild src/index.ts --bundle --outfile=lib/index.esm.js --platform=node --target=node20 --format=esm",
    "build:types": "npx tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "clean": "rm -rf lib",
    "package": "npm pack",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "mikrocompare": "1",
    "mikroformat": "1"
  },
  "devDependencies": {
    "@types/node": "20",
    "@typescript-eslint/eslint-plugin": "7",
    "@typescript-eslint/parser": "7",
    "c8": "9",
    "esbuild": "0",
    "eslint": "8",
    "eslint-config-prettier": "9",
    "eslint-plugin-prettier": "5",
    "husky": "9",
    "prettier": "3",
    "ts-node": "10",
    "typescript": "5"
  }
}
